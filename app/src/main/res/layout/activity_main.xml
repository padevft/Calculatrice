<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputOperation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:boxBackgroundMode="none">

            <EditText
                android:id="@+id/editTextOperation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="none"
                android:textAlignment="textEnd"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="25sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:boxBackgroundMode="none">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="none"
                android:textAlignment="textEnd"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:text="0"
                android:textSize="40sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="5">

            <!-- Ligne 1 -->
            <TextView
                android:id="@+id/remove"
                style="@style/StyleButtonOperand"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="onClickOperatorClean"
                android:text="←" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="onClickOperatorClean"
                android:text="CE" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="onClickOperatorClean"
                android:text="C" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="onClickOperatorOneValue"
                android:text="±" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="0"
                android:layout_column="4"
                android:onClick="onClickOperatorOneValue"
                android:text="√" />

            <!-- Ligne 2 -->
            <TextView
                style="@style/StyleButton"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="onNumberClick"
                android:text="7" />

            <TextView
                style="@style/StyleButton"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="onNumberClick"
                android:text="8" />

            <TextView
                style="@style/StyleButton"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="onNumberClick"
                android:text="9" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="1"
                android:layout_column="3"
                android:onClick="onClickOperatorTwoValue"
                android:text="÷" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="1"
                android:layout_column="4"
                android:onClick="onClickOperatorOneValue"
                android:text="%" />

            <!-- Ligne 3 -->
            <TextView
                style="@style/StyleButton"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="onNumberClick"
                android:text="4" />

            <TextView
                style="@style/StyleButton"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="onNumberClick"
                android:text="5" />

            <TextView
                style="@style/StyleButton"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="onNumberClick"
                android:text="6" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="onClickOperatorTwoValue"
                android:text="*" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="2"
                android:layout_column="4"
                android:onClick="onClickOperatorOneValue"
                android:text="1/x" />

            <!-- Ligne 4 -->
            <TextView
                style="@style/StyleButton"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="onNumberClick"
                android:text="1" />

            <TextView
                style="@style/StyleButton"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="onNumberClick"
                android:text="2" />

            <TextView
                style="@style/StyleButton"
                android:layout_row="3"
                android:layout_column="2"
                android:onClick="onNumberClick"
                android:text="3" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="3"
                android:layout_column="3"
                android:onClick="onClickOperatorTwoValue"
                android:text="-" />

            <TextView
                style="@style/StyleButtonRowSpan"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_column="4"
                android:onClick="onEqualClick"
                android:text="=" />

            <!-- Ligne 5 -->
            <TextView
                style="@style/StyleButtonColspan"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="onNumberClick"
                android:text="0" />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="4"
                android:layout_column="2"
                android:onClick="onNumberClick"
                android:text="," />

            <TextView
                style="@style/StyleButtonOperand"
                android:layout_row="4"
                android:layout_column="3"
                android:onClick="onClickOperatorTwoValue"
                android:text="+" />

        </GridLayout>
    </LinearLayout>
</LinearLayout>